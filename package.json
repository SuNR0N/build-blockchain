{
  "name": "build-blockchain",
  "version": "1.0.0",
  "description": "Build a Blockchain and a Cryptocurrency from Scratch",
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "express",
    "jest",
    "swagger",
    "typescript",
    "websocket",
    "winston"
  ],
  "dependencies": {
    "crypto-js": "^3.1.9-1",
    "elliptic": "^6.4.0",
    "express": "^4.16.3",
    "uuid": "^3.2.1",
    "winston": "^3.0.0",
    "ws": "^5.2.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^3.1.40",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.1.1",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^5.1.2",
    "jest": "^23.1.0",
    "superagent": "^3.8.3",
    "supertest": "^3.1.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "start": "ts-node src/app.ts",
    "test": "DIFFICULTY=1 MINE_RATE=100 jest --watchAll",
    "test:coverage": "DIFFICULTY=1 MINE_RATE=100 jest --coverage"
  },
  "author": "annus.norbert@gmail.com",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
